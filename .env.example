# Windy Webcams API Configuration
WINDY_WEBCAMS_API_KEY=your_windy_api_key_here
WEBCAM_ID=1358084658

# Groq API Configuration
GROQ_API_KEY=your_groq_api_key_here

# Weather API Configuration
PIRATE_WEATHER_KEY=your_pirate_weather_key_here

# Service Configuration
OBSERVATION_INTERVAL_HOURS=6
OBSERVATION_TIMES=9:00,16:20
USE_SCHEDULED_OBSERVATIONS=true

# Hugo Site Configuration
HUGO_SITE_PATH=./hugo
HUGO_BUILD_ON_UPDATE=true

# Deployment Configuration
DEPLOY_ENABLED=false
DEPLOY_METHOD=rsync
DEPLOY_DESTINATION=user@host:/path/to/destination
DEPLOY_SSH_KEY=

# Memory Configuration
MEMORY_RETENTION_DAYS=30
MAX_MEMORY_ENTRIES=50

# Output Configuration (temporary images)
OUTPUT_FILENAME=windy_webcam_image.jpg
