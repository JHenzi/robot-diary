# Robot Diary - Environment Variables
# Copy this file to .env and fill in your values

# ============================================================================
# REQUIRED - These must be set for the service to run
# ============================================================================

# Groq API Key - Get yours at https://groq.com/
GROQ_API_KEY=your_groq_api_key_here

# YouTube Live Stream URL - The stream the robot will observe
YOUTUBE_STREAM_URL=https://www.youtube.com/watch?v=your_stream_id

# ============================================================================
# IMPORTANT OPTIONAL - Highly recommended for best results
# ============================================================================

# Model for diary entry writing (Step 2)
# Default: meta-llama/llama-4-maverick-17b-128e-instruct
# Recommended for richer stories: openai/gpt-oss-120b
# The 120B model produces significantly more nuanced, thoughtful entries with a stronger robotic voice
DIARY_WRITING_MODEL=meta-llama/llama-4-maverick-17b-128e-instruct
# DIARY_WRITING_MODEL=openai/gpt-oss-120b

# Pirate Weather API Key - For weather context (highly recommended)
# Get yours at https://pirateweather.net/
PIRATE_WEATHER_KEY=your_pirate_weather_key_here

# ============================================================================
# OPTIONAL - Feature Flags & Configuration
# ============================================================================

# Enable LLM-based prompt optimization (default: false)
# When false, uses direct template combination (faster, preserves all context)
USE_PROMPT_OPTIMIZATION=false

# Enable scheduled observations (default: true)
USE_SCHEDULED_OBSERVATIONS=true

# Observation times in 24-hour format (comma-separated)
# Default: 9:00 AM and 4:20 PM
OBSERVATION_TIMES=9:00,16:20

# ============================================================================
# OPTIONAL - Memory Configuration
# ============================================================================

# Days to retain observations in memory (default: 30)
MEMORY_RETENTION_DAYS=30

# Maximum number of observations to keep (default: 50)
MAX_MEMORY_ENTRIES=50

# ============================================================================
# OPTIONAL - Hugo Configuration
# ============================================================================

# Path to Hugo site directory (default: ./hugo)
HUGO_SITE_PATH=./hugo

# Automatically build Hugo site after each observation (default: true)
HUGO_BUILD_ON_UPDATE=true

# ============================================================================
# OPTIONAL - Deployment Configuration
# ============================================================================

# Enable automatic deployment after Hugo build (default: false)
DEPLOY_ENABLED=false

# Deployment target (format: user@host:/path/to/destination)
# Required if DEPLOY_ENABLED=true
DEPLOY_DESTINATION=user@host:/path/to/destination

# Deployment method: rsync or scp (default: rsync)
DEPLOY_METHOD=rsync

# Path to SSH key file for deployment (if needed)
DEPLOY_SSH_KEY=

# ============================================================================
# ADVANCED - Usually not needed
# ============================================================================

# Observation interval in hours (legacy, not used with scheduled observations)
OBSERVATION_INTERVAL_HOURS=6
